<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.app.AR">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <fragment android:name="com.google.ar.sceneform.ux.ArFragment"
            android:id="@+id/ux_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </fragment>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/layio"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:translationZ="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/ar_ll"
        android:alpha="0.65"
        android:orientation="horizontal" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivTree"
        android:layout_width="50dp"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        android:scaleType="fitXY"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:elevation="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:translationZ="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/layio"
        android:src="@drawable/ic_icon_tree"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivHeart"
        android:layout_width="50dp"
        android:elevation="4dp"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        android:scaleType="fitXY"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:translationZ="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivTree"
        android:src="@drawable/ic_icon_heart"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivFace"
        android:layout_width="50dp"
        android:elevation="4dp"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        android:scaleType="fitXY"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:translationZ="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivHeart"
        android:src="@drawable/ic_icon_face"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivPlant"
        android:layout_width="50dp"
        android:elevation="4dp"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        android:scaleType="fitXY"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:translationZ="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivFace"
        android:src="@drawable/ic_icon_plant"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivHand"
        android:layout_width="50dp"
        android:elevation="4dp"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        android:scaleType="fitXY"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:translationZ="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivPlant"
        android:src="@drawable/ic_icon_hand"/>

    <TextView
        android:id="@+id/tvTree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:background="@drawable/ar_tv"
        android:translationZ="90dp"
        android:padding="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/judson"
        app:layout_constraintStart_toEndOf="@id/ivTree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivTree"/>

    <TextView
        android:id="@+id/tvHeart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="8dp"
        android:background="@drawable/ar_tv"
        android:translationZ="90dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/judson"
        app:layout_constraintStart_toEndOf="@id/ivHeart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivHeart"/>

    <TextView
        android:id="@+id/tvFace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:padding="8dp"
        android:background="@drawable/ar_tv"
        android:translationZ="90dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/judson"
        app:layout_constraintStart_toEndOf="@id/ivFace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivFace"/>

    <TextView
        android:id="@+id/tvPlant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="8dp"
        android:background="@drawable/ar_tv"
        android:translationZ="90dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/judson"
        app:layout_constraintStart_toEndOf="@id/ivPlant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivPlant"/>

    <TextView
        android:id="@+id/tvHand"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="8dp"
        android:background="@drawable/ar_tv"
        android:layout_marginEnd="16dp"
        android:translationZ="90dp"
        android:fontFamily="@font/judson"
        app:layout_constraintStart_toEndOf="@id/ivHand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivHand"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="16dp"
        android:background="@drawable/ar_tv"
        android:textSize="16sp"
        android:translationZ="90dp"
        android:fontFamily="@font/judson"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@id/tvTree"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_play_arrow_24"
        android:backgroundTint="@color/textGreen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="32dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>