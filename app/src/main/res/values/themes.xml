<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Woodie02" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#82B5A5</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="FullscreenTheme" parent="Theme.Woodie02">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowBackground">@drawable/splash_screen_layout</item>
    </style>

    <style name="BottomNavigation">
        <item name="paddingStart">5dp</item>
        <item name="paddingEnd">5dp</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="color">@color/white</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>