<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@+id/bg_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:translationZ="10dp"
            android:alpha="0.5"
            android:orientation="horizontal"/>
        <Constraint android:id="@+id/btnAR"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:translationZ="180dp"
            android:src="@drawable/ic_btn_ar"
            app:layout_constraintTop_toBottomOf="@id/viewPager"
            android:layout_marginTop="-24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"/>
        <Constraint android:id="@+id/tvName"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:translationZ="95dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btnClose"
            app:layout_constraintVertical_bias="1"
            android:maxLines="1"
            android:layout_marginEnd="0dp"
            app:layout_constraintHorizontal_bias="0.5"
            android:padding="8dp"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <Constraint android:id="@+id/layio"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="16dp"
            android:translationZ="0dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/blur_bg"
            app:layout_constraintTop_toBottomOf="@id/btnAR"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:alpha="0.65"/>
        <Constraint android:id="@+id/viewPager"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:translationZ="95dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintBottom_toTopOf="@+id/layio"
            android:visibility="visible"/>
        <Constraint android:id="@+id/ll1" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/bg_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:translationZ="10dp"
            android:alpha="0.0"
            android:orientation="horizontal"/>
        <Constraint android:id="@+id/btnAR"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:translationZ="180dp"
            android:src="@drawable/ic_btn_ar"
            app:layout_constraintBottom_toTopOf="@id/layio"
            android:layout_marginTop="-24dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"/>
        <Constraint android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btnClose"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="1"
            android:maxLines="1"
            android:translationZ="95dp"
            android:padding="8dp"
            app:layout_constraintHorizontal_bias="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="parent" />
        <Constraint android:id="@+id/layio"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="16dp"
            android:background="@drawable/blur_bg"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:translationZ="0dp"
            android:alpha="0.65"            />
        <Constraint android:id="@+id/viewPager"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:translationZ="95dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvName"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintBottom_toTopOf="@+id/layio"
            android:visibility="invisible"/>
        <Constraint android:id="@id/ll1" />
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start" >

        <OnClick
            app:targetId="@+id/btnAR"
            app:clickAction="toggle"/>

    </Transition>
</MotionScene>
